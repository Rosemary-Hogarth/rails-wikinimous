      <%= form_with model: @article, url: article_path(@article), method: :patch do |f| %>
      <div class="form-group my-3">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_field :content, class: "form-control", style: "height: 150px;" %>
      </div>
      <div class="col-md-6 text-left my-3">
        <%= f.submit "Update article", class: "btn btn-primary" %>
        </div>
    <% end %>

